{
  "include": ["app", "app/types", "index.ts", "index.js", "App.tsx"],
  "compilerOptions": {
    "baseUrl": ".", // ✅ 프로젝트 루트를 기준으로 alias 적용
    "paths": {
      "@app/*": ["app/*"],
      "@features/*": ["app/features/*"],
      "@shared/*": ["app/shared/*"],
      "@services/*": ["app/services/*"],
      "@navigation/*": ["app/navigation/*"],
      "@layout/*": ["app/shared/layout/*"],
      "@constants/*": ["app/shared/constants/*"],
      "@db/*": ["app/db/*"]
    },
    "jsx": "react",
    "moduleResolution": "node",
    "target": "esnext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}
