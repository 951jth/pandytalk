{
  "include": ["app", "app/types"], // 혹은 "@types"
  "compilerOptions": {
    "baseUrl": ".", // ✅ 프로젝트 루트를 기준으로 alias 적용
    "paths": {
      "@assets/*": ["app/assets/*"],
      "@components/*": ["app/components/*"],
      "@constants/*": ["app/constants/*"],
      "@contexts/*": ["app/contexts/*"],
      "@hooks/*": ["app/hooks/*"],
      "@navigation/*": ["app/navigation/*"],
      "@screens/*": ["app/screens/*"],
      "@services/*": ["app/services/*"],
      "@store/*": ["app/store/*"],
      "@utils/*": ["app/utils/*"],
      "@types/*": ["app/types/*"]
    },
    "jsx": "react",
    "moduleResolution": "node",
    "target": "esnext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}
