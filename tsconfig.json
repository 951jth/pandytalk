{
  "include": ["app", "app/types", "index.ts", "index.js", "App.tsx"],
  "compilerOptions": {
    "baseUrl": ".", // ✅ 프로젝트 루트를 기준으로 alias 적용
    "paths": {
      "@/*": ["app/*"], // ✅ app 폴더가 소스 루트라면 이렇게,
      "@assets/*": ["app/assets/*"],
      "@components/*": ["app/components/*"],
      "@constants/*": ["app/constants/*"],
      "@contexts/*": ["app/contexts/*"],
      "@hooks/*": ["app/hooks/*"],
      "@navigation/*": ["app/navigation/*"],
      "@features/*": ["app/features/*"],
      "@services/*": ["app/services/*"],
      "@store/*": ["app/store/*"],
      "@utils/*": ["app/utils/*"],
      "@types/*": ["app/types/*"],
      "@repositories/*": ["app/repositories/*"]
    },
    "jsx": "react",
    "moduleResolution": "node",
    "target": "esnext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}
